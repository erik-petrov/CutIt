<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.cutit.controllers.CropController">
    <MenuBar fx:id="menubar" layoutY="1.0" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="1000.0">
        <Menu mnemonicParsing="false" text="%menubar.file.title">
            <CheckMenuItem mnemonicParsing="false" onAction="#KeepOpen" text="%menubar.file.keepMenu" />
            <MenuItem mnemonicParsing="false" onAction="#SaveAs" text="%menubar.file.saveAs" />
            <MenuItem mnemonicParsing="false" onAction="#WindowExit" text="%menubar.file.exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="%menubar.language.title">
            <MenuItem mnemonicParsing="false" onAction="#LanguageSwitch" text="%menubar.language.en" userData="en-GB" />
            <MenuItem mnemonicParsing="false" onAction="#LanguageSwitch" text="%menubar.language.et" userData="et-ET" />
        </Menu>
        <Menu mnemonicParsing="false" text="%menubar.module.title">
            <MenuItem mnemonicParsing="false" text="%menubar.module.player" userData="player" onAction="#ModuleSwitch"/>
            <MenuItem mnemonicParsing="false" text="%menubar.module.addText" userData="addText" onAction="#ModuleSwitch"/>
            <MenuItem mnemonicParsing="false" text="%menubar.module.addImage" userData="addImage" onAction="#ModuleSwitch"/>
            <MenuItem mnemonicParsing="false" text="%menubar.module.cut" userData="cut" onAction="#ModuleSwitch"/>
            <MenuItem mnemonicParsing="false" text="%menubar.module.time" userData="time" onAction="#ModuleSwitch"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%menubar.help.title">
            <MenuItem mnemonicParsing="false" text="%menubar.help.about" onAction="#AboutWindow"/>
        </Menu>
    </MenuBar>
    <MediaView fx:id="mediaView" fitHeight="500.0" fitWidth="889.0" layoutX="78.0" layoutY="75.0"
               onMouseClicked="#mediaClick"/>
    <TextField fx:id="width" layoutX="101.0" layoutY="587.0"/>
    <TextField fx:id="y" layoutX="279.0" layoutY="646.0"/>
    <TextField fx:id="height" layoutX="101.0" layoutY="646.0"/>
    <TextField layoutX="279.0" layoutY="587.0" fx:id="x"/>
    <Label layoutX="56.0" layoutY="591.0" prefHeight="17.0" prefWidth="34.0" text="%crop.control.width"/>
    <Label layoutX="55.0" layoutY="650.0" prefHeight="17.0" prefWidth="34.0" text="%crop.control.height"/>
    <Label layoutX="262.0" layoutY="591.0" text="X">
        <font>
          <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <Label layoutX="263.0" layoutY="650.0" text="Y">
        <font>
          <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <Button layoutX="501.0" layoutY="587.0" mnemonicParsing="false" onAction="#Crop" prefHeight="92.0" prefWidth="201.0"
            text="%crop.button"/>
</AnchorPane>
