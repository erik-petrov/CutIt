<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainBox" alignment="CENTER" minHeight="720.0" minWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.cutit.PlayerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="CENTER" prefHeight="56.0" prefWidth="243.0" text="CutIt video player" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
      <Pane>
         <children>
            <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="600.0" layoutX="320.0">
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </MediaView>
            <Label alignment="CENTER" layoutX="335.0" layoutY="223.0" prefHeight="147.0" prefWidth="570.0" text="Drag File here" textAlignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="64.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" nodeOrientation="LEFT_TO_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#Play" text="Play">
               <FlowPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </FlowPane.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#Pause" text="Pause">
               <FlowPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </FlowPane.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#Reset" text="Reset" textAlignment="CENTER">
               <FlowPane.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </FlowPane.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </FlowPane>
   </children>
</VBox>
